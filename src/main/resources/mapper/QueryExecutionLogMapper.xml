<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dw.dashboard.mapper.QueryExecutionLogMapper">

    <!-- 通用结果映射 -->
    <resultMap id="BaseResultMap" type="com.dw.dashboard.entity.QueryExecutionLog">
        <id column="id" property="id"/>
        <result column="dashboard_id" property="dashboardId"/>
        <result column="query_id" property="queryId"/>
        <result column="data_source_id" property="dataSourceId"/>
        <result column="execute_sql" property="executeSql"/>
        <result column="execute_params" property="executeParams"/>
        <result column="execute_time" property="executeTime"/>
        <result column="result_rows" property="resultRows"/>
        <result column="status" property="status"/>
        <result column="error_message" property="errorMessage"/>
        <result column="execute_user" property="executeUser"/>
        <result column="execute_ip" property="executeIp"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, dashboard_id, query_id, data_source_id, execute_sql, execute_params, execute_time,
        result_rows, status, error_message, execute_user, execute_ip, create_time
    </sql>

    <!-- 根据查询ID查询执行日志 -->
    <select id="selectByQueryId" resultMap="BaseResultMap">
        SELECT
            <include refid="Base_Column_List"/>
        FROM tb_query_execution_log
        WHERE query_id = #{queryId}
        ORDER BY create_time DESC
        LIMIT #{limit}
    </select>

    <!-- 根据用户查询执行日志 -->
    <select id="selectByUser" resultMap="BaseResultMap">
        SELECT
            <include refid="Base_Column_List"/>
        FROM tb_query_execution_log
        WHERE execute_user = #{executeUser}
        ORDER BY create_time DESC
        LIMIT #{limit}
    </select>

    <!-- 统计查询执行次数 -->
    <select id="countByQueryId" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM tb_query_execution_log
        WHERE query_id = #{queryId}
    </select>

</mapper>
