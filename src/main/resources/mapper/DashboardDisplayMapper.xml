<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dw.dashboard.mapper.DashboardDisplayMapper">

    <!-- 通用结果映射 -->
    <resultMap id="BaseResultMap" type="com.dw.dashboard.entity.DashboardDisplay">
        <id column="id" property="id"/>
        <result column="dashboard_id" property="dashboardId"/>
        <result column="query_id" property="queryId"/>
        <result column="chart_type" property="chartType"/>
        <result column="chart_config" property="chartConfig"/>
        <result column="display_order" property="displayOrder"/>
        <result column="deleted" property="deleted"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, dashboard_id, query_id, chart_type, chart_config, display_order,
        deleted, create_time, update_time, create_by, update_by
    </sql>

    <!-- 根据报表ID查询展示配置列表 -->
    <select id="selectByDashboardId" resultMap="BaseResultMap">
        SELECT
            <include refid="Base_Column_List"/>
        FROM tb_dashboard_display
        WHERE dashboard_id = #{dashboardId}
          AND deleted = 0
        ORDER BY display_order ASC
    </select>

</mapper>
