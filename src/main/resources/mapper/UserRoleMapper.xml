<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dw.dashboard.mapper.UserRoleMapper">

    <!-- 通用结果映射 -->
    <resultMap id="BaseResultMap" type="com.dw.dashboard.entity.UserRole">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="role_id" property="roleId"/>
        <result column="deleted" property="deleted"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, user_id, role_id,
        deleted, create_time, update_time, create_by, update_by
    </sql>

    <!-- 批量插入用户角色关联 -->
    <insert id="batchInsert">
        INSERT INTO tb_user_role (user_id, role_id, create_time, create_by)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.userId}, #{item.roleId}, NOW(), #{item.createBy})
        </foreach>
    </insert>

    <!-- 删除用户的所有角色 -->
    <delete id="deleteByUserId">
        UPDATE tb_user_role
        SET deleted = 1, update_time = NOW()
        WHERE user_id = #{userId}
    </delete>

</mapper>
