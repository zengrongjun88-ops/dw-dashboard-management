<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dw.dashboard.mapper.DashboardQueryMapper">

    <!-- 通用结果映射 -->
    <resultMap id="BaseResultMap" type="com.dw.dashboard.entity.DashboardQuery">
        <id column="id" property="id"/>
        <result column="dashboard_id" property="dashboardId"/>
        <result column="query_name" property="queryName"/>
        <result column="data_source_id" property="dataSourceId"/>
        <result column="query_sql" property="querySql"/>
        <result column="query_params" property="queryParams"/>
        <result column="cache_enabled" property="cacheEnabled"/>
        <result column="cache_expire" property="cacheExpire"/>
        <result column="deleted" property="deleted"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, dashboard_id, query_name, data_source_id, query_sql, query_params,
        cache_enabled, cache_expire,
        deleted, create_time, update_time, create_by, update_by
    </sql>

    <!-- 根据报表ID查询查询配置列表 -->
    <select id="selectByDashboardId" resultMap="BaseResultMap">
        SELECT
            <include refid="Base_Column_List"/>
        FROM tb_dashboard_query
        WHERE dashboard_id = #{dashboardId}
          AND deleted = 0
        ORDER BY create_time ASC
    </select>

</mapper>
