<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dw.dashboard.mapper.DashboardMapper">

    <!-- 通用结果映射 -->
    <resultMap id="BaseResultMap" type="com.dw.dashboard.entity.Dashboard">
        <id column="id" property="id"/>
        <result column="dashboard_name" property="dashboardName"/>
        <result column="dashboard_code" property="dashboardCode"/>
        <result column="category" property="category"/>
        <result column="description" property="description"/>
        <result column="status" property="status"/>
        <result column="deleted" property="deleted"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, dashboard_name, dashboard_code, category, description, status,
        deleted, create_time, update_time, create_by, update_by
    </sql>

    <!-- 根据分类查询报表列表 -->
    <select id="selectByCategory" resultMap="BaseResultMap">
        SELECT
            <include refid="Base_Column_List"/>
        FROM tb_dashboard
        WHERE category = #{category}
          AND deleted = 0
        ORDER BY create_time DESC
    </select>

    <!-- 查询已发布的报表列表 -->
    <select id="selectPublishedDashboards" resultMap="BaseResultMap">
        SELECT
            <include refid="Base_Column_List"/>
        FROM tb_dashboard
        WHERE status = 1
          AND deleted = 0
        ORDER BY create_time DESC
    </select>

</mapper>
